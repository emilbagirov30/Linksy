<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.emil.linksy.presentation.ui.PostFragment">


    <EditText
        android:id="@+id/et_new_post"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rounded_post_edit_text"
        android:paddingStart="7dp"
        android:paddingEnd="12dp"
       android:paddingTop="10dp"
        android:gravity="start"
        android:textColor="@color/black"
        android:fontFamily="@font/klukva"
        android:drawableEnd="@drawable/ic_publish"
        android:hint="@string/share_your_thoughts">
    </EditText>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_posts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginTop="10dp">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/fl_empty_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
     >
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_empty_box"
            android:layout_gravity="center" >
        </ImageView>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/empty_message"
            android:textSize="15sp"
            android:textColor="@color/gray"
            android:layout_gravity="center" />

    </LinearLayout>

<com.facebook.shimmer.ShimmerFrameLayout
    android:id="@+id/shimmer_posts"
    android:layout_width="match_parent"
    android:alpha="0.4"
    app:shimmer_colored="true"
    app:shimmer_base_color="@color/soft_gray"
    android:layout_marginTop="10dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <include
        layout="@layout/rv_item_post"
        />
    <include
        layout="@layout/rv_item_post"
        />
    <include
        layout="@layout/rv_item_post"
        />
    <include
        layout="@layout/rv_item_post"
        />
    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>

</LinearLayout>
