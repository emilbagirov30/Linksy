<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Linksy" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="Theme.Linksy" parent="Base.Theme.Linksy" />

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="EditTextStyle" >
        <item name="android:fontFamily">@font/klukva</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
    </style>

    <style name="LandscapeEditTextStyle" >
        <item name="android:fontFamily">@font/klukva</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
    </style>

    <style name="CodeEditTextStyle" >
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/code_edit_text</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
    </style>


    <style name="TextTitleStyle" >
        <item name="android:fontFamily">@font/klukva</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextQuestionStyle" >
        <item name="android:fontFamily">@font/klukva</item>
        <item name="android:textColor">@color/question</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="TextLinkStyle" >
        <item name="android:fontFamily">@font/klukva</item>
        <item name="android:textColor">@color/link</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="TextErrorStyle" >
        <item name="android:textColor">@color/textView_error_message</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonInEditTextStyle" >
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_margin">7dp</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppModalStyle" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:background">@drawable/bottom_sheet_rounded</item>
    </style>
    <style name="CustomProgressBarStyle" >
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>