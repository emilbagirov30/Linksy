<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".RegistrationFragment">

<com.google.android.material.textview.MaterialTextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/sign_up_title"
  style="@style/TextTitleStyle">
</com.google.android.material.textview.MaterialTextView>

    <EditText
        android:id="@+id/et_username"
        android:layout_marginTop="25dp"
        style="@style/EditTextStyle"
        android:inputType="text"
        android:hint="@string/hint_username">
    </EditText>

    <EditText
        android:id="@+id/et_email"
        android:layout_marginTop="20dp"
        style="@style/EditTextStyle"
        android:inputType="textEmailAddress"
        android:hint="@string/hint_email">
    </EditText>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
      >

        <EditText
            android:id="@+id/et_password"
            style="@style/EditTextStyle"
            android:inputType="textPassword"
            android:hint="@string/hint_password">
        </EditText>

        <ImageView
            android:id="@+id/iv_password_show"
            style="@style/ButtonInEditTextStyle"
            android:background="@drawable/show_password"
            />

        <ImageView
            android:id="@+id/iv_password_hide"
             style="@style/ButtonInEditTextStyle"
            android:background="@drawable/hide_password"
            />
    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/et_confirm_password"
            style="@style/EditTextStyle"
            android:inputType="textPassword"
            android:hint="@string/hint_confirm_password">
        </EditText>
        <ImageView
            android:id="@+id/iv_passwordc_show"
            style="@style/ButtonInEditTextStyle"
            android:background="@drawable/show_password"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/iv_passwordc_hide"
            style="@style/ButtonInEditTextStyle"
            android:background="@drawable/hide_password"
            android:contentDescription="TODO" />

    </RelativeLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_marginTop="25dp"
        android:text="@string/sign_up_button">

    </com.google.android.material.button.MaterialButton>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >
    <com.google.android.material.textview.MaterialTextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       style="@style/TextQuestionStyle"
        android:text="@string/question_have_an_account">

    </com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/bt_login"
            style="@style/TextLinkStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="5dp"
            android:text="@string/login_button">

        </com.google.android.material.textview.MaterialTextView>
    </LinearLayout>


</LinearLayout>